{
  // パッケージマネージャー
  "npm.packageManager": "pnpm",
  // TypeScript設定
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsserver.log": "off",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.implicitProjectConfig.target": "ES2024",
  "javascript.implicitProjectConfig.target": "ES2024",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.suggest.autoImports": true,
  // 開いていないファイルを含むプロジェクト全体を常時チェック（乖離防止の核心）
  // ※ node_modules の診断はスキップ（skipLibCheck で制御）
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  // tsconfig/jsconfig のないファイルが implicit project に入ったとき .d.ts エラーを抑制
  "typescript.implicitProjectConfig.skipLibCheck": true,
  // JS ファイル（eslint.config.js 等）の TypeScript 診断をオフ
  "javascript.validate.enable": false,
  // メモリ不足によるTSサーバー再起動を防ぐ（再起動が乖離の原因になることがある）
  "typescript.tsserver.maxTsServerMemory": 4096,
  // Linuxのinotifyで即時検知（ポーリング待機をなくす）
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling",
    "synchronousWatchDirectory": true
  },
  // エディター設定
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [100],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  // ファイル設定
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.build": true,
    "**/dist": true,
    "**/*.log": true,
    "**/coverage": true
  },
  // 検索設定
  "search.exclude": {
    "**/node_modules": true,
    "**/.build": true,
    "**/dist": true,
    "**/coverage": true,
    "**/pnpm-lock.yaml": true,
    "**/*.log": true
  },
  // テスト設定
  "jest.runMode": "on-demand",
  // Git設定
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  // ポート自動転送（高番ポートの大量検出を抑制）
  "remote.autoForwardPorts": true,
  // ESLint設定
  "eslint.validate": ["javascript", "typescript"],
  "eslint.format.enable": true,
  // cSpell設定（問題タブに表示しない）
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.showStatus": false,
  // 言語別設定
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // その他
  "todo-tree.tree.scanMode": "workspace only",
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,
  "chat.tools.terminal.autoApprove": {
    "/^cd /home/shun/dev/ayasono && python3 - <<'PY'\nimport pathlib\nrows=\\[\\]\nfor p in pathlib\\.Path\\('src'\\)\\.rglob\\('\\*\\.ts'\\):\n    s=p\\.read_text\\(encoding='utf-8'\\)\\.splitlines\\(\\)\n    code=sum\\(1 for l in s if l\\.strip\\(\\)\\)\n    c=sum\\(1 for l in s if l\\.strip\\(\\)\\.startswith\\('//'\\) or l\\.strip\\(\\)\\.startswith\\('/\\*\\*'\\) or l\\.strip\\(\\)\\.startswith\\('\\*'\\)\\)\n    rows\\.append\\(\\(c/\\(code or 1\\),c,code,str\\(p\\)\\)\\)\nrows\\.sort\\(key=lambda x:\\(x\\[0\\],x\\[1\\]\\)\\)\nfor r in rows\\[:15\\]:\n    print\\(f\"\\{r\\[0\\]:\\.3f\\}\\\\t\\{r\\[1\\]:3d\\}/\\{r\\[2\\]:3d\\}\\\\t\\{r\\[3\\]\\}\"\\)\nPY$/": {
      "approve": true,
      "matchCommandLine": true
    }
  }
}
