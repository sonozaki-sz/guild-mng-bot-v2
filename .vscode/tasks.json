{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: TypeScript",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Build: Watch",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "tsc-watch"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": ".*"
                    },
                    "endsPattern": {
                        "regexp": "Watching for file changes"
                    }
                }
            }
        },
        {
            "label": "Test: Run All",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Test: Watch Mode",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "test:watch"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Watch Usage.*$",
                    "endsPattern": "^.*Ran all test suites.*$"
                }
            }
        },
        {
            "label": "Test: Coverage",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "test:coverage"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint: Check",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "lint"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Lint: Fix",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "lint:fix"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Format: Check",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "format:check"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Format: Write",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "format"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "TypeCheck",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "typecheck"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Dev: Start Bot",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "dev:bot"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*starting.*$",
                    "endsPattern": "^.*ready.*$"
                }
            }
        },
        {
            "label": "Dev: Start Web",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "dev:web"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*starting.*$",
                    "endsPattern": "^.*Server listening.*$"
                }
            }
        },
        {
            "label": "Database: Migrate",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "db:migrate"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Database: Studio",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "db:studio"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean: Build Output",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "dist",
                ".build",
                "*.tsbuildinfo"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}