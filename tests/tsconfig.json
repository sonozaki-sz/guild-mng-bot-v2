{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "..", // プロジェクトルートをrootDirとして設定
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "jest"], // テスト環境用の型定義
    "noEmit": true // テストコードはビルドしない
  },
  "include": ["./**/*", "../src/**/*"],
  "exclude": ["node_modules"]
}
